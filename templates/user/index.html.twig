{% extends 'base.html.twig' %}

{% block title 'Mon profil' %}

{% block body %}
    <div class="container m-auto">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col col-xl-10">
                <div class="card rounded-4 shadow">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-flex  justify-content-center
                        align-items-center">
                            <img src="/build/images/logo.png"
                                 alt="login site" class="img-fluid" width="200px">
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <form action="" name="profil_form" method="post">
                                    <h5 class="fw-normal mb-3 pb-3"
                                        style="letter-spacing: 1px;">Mon profil</h5>
                                    <div class="form-floating mb-4">
                                        <input type="email" value="{{ user.email }}" name="email"
                                               id="inputEmail" class="form-control form-control-lg {{ (error.email or error.callback) ? 'is-invalid' }}"
                                               autocomplete="Email" required autofocus placeholder="Email">
                                        <label for="inputEmail" class="form-label">Email</label>
                                        {% if error.email %}
                                            <div class="invalid-feedback">
                                                {{ error.email }}
                                            </div>
                                        {% endif %}
                                        {% if error.callback %}
                                            <div class="invalid-feedback">
                                                {{ error.callback }}
                                            </div>
                                        {% endif %}
                                    </div>

                                    <div class="form-floating mb-4">
                                        <input
                                                type="text"
                                                name="firstname"
                                                id="inputFirstname"
                                                class="form-control {{ (error.firstname) ? 'is-invalid' }}"
                                                autocomplete="current-password" required
                                                placeholder="password"
                                                value="{{ user.firstname }}"
                                        >
                                        <label for="inputFirstname">Pr√©nom</label>
                                        {% if error.firstname %}
                                            <div class="invalid-feedback">
                                                {{ error.firstname }}
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="form-floating mb-4">
                                        <input
                                                type="text"
                                                name="lastname"
                                                id="inputLastname"
                                                class="form-control {{ (error.lastname) ? 'is-invalid' }}"
                                                autocomplete="current-password" required
                                                placeholder="password"
                                                value="{{ user.lastname }}"
                                        >
                                        <label for="inputLastname">Nom</label>
                                        {% if error.lastname %}
                                            <div class="invalid-feedback">
                                                {{ error.lastname }}
                                            </div>
                                        {% endif %}
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block"
                                                type="submit">Modifier
                                        </button>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <a href="/profil/edit-password" class="small text-muted">
                                            Changer le mot de passe</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}