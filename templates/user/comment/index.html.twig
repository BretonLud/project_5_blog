{% extends 'base.html.twig' %}

{% block title 'Mes commentaires' %}

{% block body %}
    <div class="container table-responsive p-4">
        <div class="mb-4">
            <h2 class="text-center">{{ block('title') }}</h2>
        </div>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>
                    Blog
                </th>
                <th>
                    Commentaire
                </th>
                <th>
                    Cr√©er le
                </th>
                <th>
                    Modifier le
                </th>
            </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>
                        <a href="/blogs/show/{{ comment.blog.slug }}">{{ comment.blog.title }}</a>
                    </td>

                    <td>
                        {{ comment.content }}
                    </td>
                    <td>
                        {{ comment.createdAt|date('d/m/y H:i') }}
                    </td>
                    <td>
                        {{ comment.updatedAt|date('d/m/y H:i') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <th colspan="10">
                        Pas de commentaires existants
                    </th>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <th colspan="10">
                    <div class="d-flex justify-content-between">
                        <a href="/" class="btn btn-warning">
                            <i class="bi bi-arrow-return-left"></i>
                        </a>
                    </div>
                </th>
            </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}