{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center vh-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-flex  justify-content-center
                        align-items-center">
                            <img src=""
                                 alt="login site" class="img-fluid"/>
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <form action="" name="reset_password_form" method="post" class="needs-validation" novalidate>
                                    <h5 class="fw-normal mb-3 pb-3"
                                        style="letter-spacing: 1px;">Mot de passe oublié</h5>
                                    <div class="form-floating mb-4">
                                        <input type="email" name="email"
                                               id="inputEmail" class="form-control form-control-lg {{ (error.email) ? 'is-invalid' }}"
                                               autocomplete="Email" required autofocus placeholder="Email">
                                        <label for="inputEmail" class="form-label">Email</label>
                                        {% if error.email %}
                                            <div class="invalid-feedback">
                                                {{ error.email }}
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="mb-3">
                                        <small>
                                            Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                                        </small>
                                    </div>
                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block"
                                                type="submit">Envoyer la demande
                                        </button>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <a href="/register" class="small text-muted">
                                            S'enregistrer
                                        </a>
                                        <a href="/login" class="small text-muted">
                                            Se connecter
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}