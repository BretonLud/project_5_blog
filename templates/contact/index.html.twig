{% extends 'base.html.twig' %}

{% block title %}Formulaire de contact{% endblock %}

{% block body %}
    <section class="py-3 py-md-5 py-xl-8">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8">
                    <h3 class="fs-5 mb-2 text-secondary text-uppercase text-center">{{ block('title') }}</h3>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-6">
                    <form action="" method="post" class="shadow rounded-4 bg-white">
                        <div class="border overflow-hidden rounded-4">
                            <div class="row gy-4 gy-xl-3 p-4 p-xl-5">
                                <div class="col-12">
                                    <label for="fullname" class="form-label">Prénom et nom <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="fullname" name="fullname" value="{{ (app.user) ? app.user }}" required placeholder="Jean Dupond">
                                </div>
                                <div class="col-12 col-md-6">
                                    <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                          <span class="input-group-text">
                                            <i class="bi bi-envelope"></i>
                                          </span>
                                        <input type="email" class="form-control" id="email" name="email" value="{{ (app.user) ? app.user.email }}" required
                                               placeholder="jean.dupond@gmail.com">
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <label for="phone" class="form-label">Téléphone</label>
                                    <div class="input-group">
                                          <span class="input-group-text">
                                            <i class="bi bi-telephone"></i>
                                          </span>
                                        <input type="tel" class="form-control" id="phone" name="phone" value="" placeholder="0123456789">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <label for="subject" class="form-label">Sujet <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="subject" name="subject" value="" required>
                                </div>
                                <div class="col-12">
                                    <label for="message" class="form-label">Message <span class="text-danger">*</span></label>
                                    <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                                </div>
                                <div class="col-12">
                                    <div class="d-grid">
                                        <button class="btn btn-primary btn-lg btn-submit-contact" type="button">Envoyer</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="/build/contact.js" defer></script>
{% endblock %}